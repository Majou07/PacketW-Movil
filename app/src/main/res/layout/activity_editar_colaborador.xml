<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Título (hasta arriba) -->
        <TextView
            android:id="@+id/tvTitulo"
            android:text="Editar perfil"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Botón regresar (opcional debajo del título) -->
        <ImageButton
            android:id="@+id/btnRegresar"
            android:src="@android:drawable/ic_media_previous"
            android:background="@null"
            android:contentDescription="Regresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

        <!-- Fotografía del conductor (centrada) -->
        <ImageView
            android:id="@+id/iv_fotografia"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/black"
            android:contentDescription="Foto de perfil"/>

        <!-- Nombre -->
        <EditText
            android:id="@+id/etNombre"
            android:hint="Nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"/>

        <!-- Apellido paterno -->
        <EditText
            android:id="@+id/etApellidoPaterno"
            android:hint="Apellido paterno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"/>

        <!-- Apellido materno -->
        <EditText
            android:id="@+id/etApellidoMaterno"
            android:hint="Apellido materno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"/>

        <!-- Correo electrónico -->
        <EditText
            android:id="@+id/etCorreo"
            android:hint="Correo electrónico"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"/>

        <!-- CURP -->
        <EditText
            android:id="@+id/etCurp"
            android:hint="CURP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:enabled="false"/>

        <!-- Contraseña -->
        <EditText
            android:id="@+id/etContrasena"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:enabled="false"/>

        <!-- Número de licencia -->
        <EditText
            android:id="@+id/etNumeroLicencia"
            android:hint="Número de licencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:enabled="false"/>

        <!-- Botón actualizar -->
        <Button
            android:id="@+id/btnActualizar"
            android:text="Actualizar perfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"/>

    </LinearLayout>
</ScrollView>
