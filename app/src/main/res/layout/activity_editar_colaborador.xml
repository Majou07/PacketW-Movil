<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Título -->
        <TextView
            android:id="@+id/tvTitulo"
            android:text="Editar perfil"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Botón regresar -->
        <ImageButton
            android:id="@+id/btnRegresar"
            android:src="@android:drawable/ic_media_previous"
            android:background="@null"
            android:contentDescription="Regresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <!-- Foto -->
        <ImageView
            android:id="@+id/ivFotografia"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:background="@color/black"
            android:contentDescription="Foto de perfil" />

        <!-- Nombre -->
        <TextView
            android:text="Nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etNombre"
            android:hint="Ingresa tu nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Apellido paterno -->
        <TextView
            android:text="Apellido paterno"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etApellidoPaterno"
            android:hint="Ingresa tu apellido paterno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Apellido materno -->
        <TextView
            android:text="Apellido materno"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etApellidoMaterno"
            android:hint="Ingresa tu apellido materno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Correo -->
        <TextView
            android:text="Correo electrónico"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etCorreo"
            android:hint="correo@ejemplo.com"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- CURP -->
        <TextView
            android:text="CURP"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etCurp"
            android:hint="CURP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Contraseña -->
        <TextView
            android:text="Contraseña"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etContrasena"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Licencia -->
        <TextView
            android:text="Número de licencia"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etNumeroLicencia"
            android:hint="Número de licencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Botón -->
        <Button
            android:id="@+id/btnActualizar"
            android:text="Actualizar perfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp" />

    </LinearLayout>
</ScrollView>
